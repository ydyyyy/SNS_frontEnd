import request from '@/request'

export function getAllCategorys() {
  return request({
    url: '/activityCategorys',
    method: 'get',
  })
}

export function getAllCategorysDetail() {
  return request({
    url: '/activityCategorys/detail',
    method: 'get',
  })
}

export function getCategory(id) {
  return request({
    url: `/activityCategorys/${id}`,
    method: 'get',
  })
}

export function getCategoryDetail(id) {
  return request({
    url: `/activityCategorys/detail/${id}`,
    method: 'get',
  })
}
